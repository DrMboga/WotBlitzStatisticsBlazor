@inherits AccountSearchComponent

<div class="container-fluid p-3">
	<div class="form-group row">
		<div class="col-sm-10">
			<input id="searchString" class="form-control"
				   @bind-value="SearchString"
				   @bind-value:event="oninput"
				   placeholder="Enter account nick" />
		</div>
		<div class="col-sm-2">
			<button class="btn"
					type="button"
					id="search-dropdown"
					@onclick="FindAccounts">
				<!--<fa-icon icon="search" size="xs"></fa-icon>-->
				Search
			</button>
		</div>
	</div>
	@if (Accounts != null)
	{
		<div class="row">
			<table class="table">
				<tbody>
					@foreach (var account in Accounts)
					{
						<tr>
							<td>
								<NavLink href="@($"accountinfo/{account.Key}")">
									@account.Value
								</NavLink>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	}
</div>