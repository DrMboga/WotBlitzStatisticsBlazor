@page "/player/{AccountId:long}"
@using WotBlitzStatisticsPro.Blazor.Helpers
@inherits PlayerInfoLayoutBase
<RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"
                   Visible="@(AccountInfo == null)"
                   Style="width: 100%; margin-top: 10px;" />
@if (AccountInfo != null)
{
    <RadzenTabs >
        <Tabs>
            <RadzenTabsItem Icon="person_outline" >
                <PlayerInfoOverview></PlayerInfoOverview>
            </RadzenTabsItem>
            <RadzenTabsItem Icon="insights">
                <PlayerInfoStatistics></PlayerInfoStatistics>
            </RadzenTabsItem>
            <RadzenTabsItem Icon="agriculture">
                <PlayerInfoTanksList></PlayerInfoTanksList>
            </RadzenTabsItem>
            <RadzenTabsItem Icon="military_tech">
                <PlayerInfoAchievements></PlayerInfoAchievements>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
}