@inherits PlayerInfoTanksTreeBase;
<div style="overflow-y: auto; overflow-x: auto;">
    <svg 
        xmlns="http://www.w3.org/2000/svg" 
        xmlns:xlink="http://www.w3.org/1999/xlink"
        width="1400" 
        height="@FrameHeigth" 
        style="background-color: darkcyan; ">
    @for (int i = 0; i < 3; i++)
        {
            <svg x="20"
                y="@(i * (120 + 20) + 20)"
                width="200"
                height="120">
                <g>
                    <rect
                        x="0"
                        y="0"
                        width="200"
                        height="120"
                        rx="10"
                        ry="10"
                        fill="#275950"
                        stroke="#4a8777">
                    </rect>
                    <text x="5" y="5" fill="white" text-anchor="start" alignment-baseline="before-edge">
                        @TanksList.ToArray()[i].Name
                    </text>
                    <image x="20" y="20" width="95" height="70" xlink:href="@TanksList.ToArray()[i].PreviewImage"/>
                </g>
            </svg>
        }
    </svg>
</div>
